<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/layout"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/linear2"
            android:background="@drawable/box">
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  >
                  <io.netopen.hotbitmapgg.library.view.RingProgressBar
                      android:id="@+id/ringprogress"
                      android:layout_width="150dp"
                      android:layout_height="150dp"
                      app:max="100"
                      app:ringColor="#E6E6FA"
                      app:ringProgressColor="#FFA500"
                      app:ringWidth="25dp"
                      app:textColor="#000000"
                      app:textIsShow="true"
                      android:layout_marginLeft="15dp"
                      android:layout_marginTop="40dp"
                      app:textSize="40sp"
                      />
                  <Button
                      android:id="@+id/w1"
                      android:layout_width="60dp"
                      android:layout_height="40dp"
                      android:layout_below="@id/ringprogress"
                      android:layout_alignParentStart="true"
                      android:layout_alignParentLeft="true"
                      android:layout_marginTop="15dp"
                      android:layout_marginLeft="15dp"
                      android:onClick="w1"
                      android:text="ON"
                      android:textColor="#FFFF"
                      android:background="#00FF7F"
                      android:textAlignment="center"
                      android:textSize="15dp"
                      android:textStyle="bold"


                     />
                  <Button
                      android:id="@+id/w2"
                      android:layout_width="60dp"
                      android:layout_height="40dp"
                      android:layout_below="@id/ringprogress"
                      android:onClick="w10"
                      android:text="OFF"
                      android:background="#FE0000"
                      android:textColor="#FFFF"
                      android:textAlignment="center"
                      android:textSize="15dp"
                      android:textStyle="bold"
                      android:layout_marginLeft="100dp"
                      android:layout_marginTop="15dp"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="TANK1"
                      android:layout_marginLeft="55dp"
                      android:textStyle="bold"
                      android:textSize="20dp"
                      android:textColor="#000000"/>

              </RelativeLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:background="@drawable/box">

              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
                  <io.netopen.hotbitmapgg.library.view.RingProgressBar
                      android:id="@+id/ringprogress1"
                      android:layout_width="150dp"
                      android:layout_height="150dp"
                      android:layout_marginLeft="15dp"
                      android:layout_marginTop="40dp"
                      app:max="100"
                      app:ringColor="#E6E6FA"
                      app:ringProgressColor="#FFA500"
                      app:ringWidth="25dp"
                      app:textColor="#000000"
                      app:textIsShow="true"
                      app:textSize="40sp" />

                  <Button
                      android:id="@+id/w3"
                      android:layout_width="60dp"
                      android:layout_height="40dp"
                      android:layout_below="@id/ringprogress1"
                      android:layout_marginLeft="15dp"
                      android:layout_marginStart="15dp"
                      android:layout_marginTop="15dp"
                      android:onClick="w21"
                      android:text="@string/on"
                      android:textAlignment="center"
                      android:textSize="15sp"
                      android:textColor="#FFFF"
                      android:background="#00FF7F"
                      android:textStyle="bold" />
                  <Button
                      android:id="@+id/w4"
                      android:layout_width="60dp"
                      android:layout_height="40dp"
                      android:layout_below="@id/ringprogress1"
                      android:layout_marginLeft="100dp"
                      android:layout_marginStart="100dp"
                      android:layout_marginTop="15dp"
                      android:onClick="w20"
                      android:text="@string/off"
                      android:background="#FE0000"
                      android:textColor="#FFFF"
                      android:textAlignment="center"
                      android:textSize="15sp"
                      android:textStyle="bold" />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="TANK2"
                      android:layout_marginLeft="55dp"
                      android:layout_marginStart="55dp"
                      android:textStyle="bold"
                      android:textSize="20sp"
                      android:textColor="#000000"/>
                  <ImageView
                      android:id="@+id/image"
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:layout_alignParentRight="true"
                      android:layout_alignParentEnd="true"
                      android:src="@drawable/ic_wb_incandescent_black_24dp"/>
              </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/box"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <io.netopen.hotbitmapgg.library.view.RingProgressBar
                        android:id="@+id/ringprogress2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="40dp"
                        app:max="100"
                        app:ringColor="#E6E6FA"
                        app:ringProgressColor="#FFA500"
                        app:ringWidth="25dp"
                        app:textColor="#000000"
                        app:textIsShow="true"
                        app:textSize="40sp" />

                    <Button
                        android:id="@+id/w5"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/ringprogress2"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:background="#00FF7F"
                        android:onClick="w31"
                        android:text="@string/on"
                        android:textAlignment="center"
                        android:textColor="#FFFF"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/w6"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/ringprogress2"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="15dp"
                        android:background="#FE0000"
                        android:onClick="w30"
                        android:text="@string/off"
                        android:textAlignment="center"
                        android:textColor="#FFFF"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="55dp"
                        android:text="@string/tank3"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/box"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <io.netopen.hotbitmapgg.library.view.RingProgressBar
                        android:id="@+id/ringprogress3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="40dp"
                        app:max="100"
                        app:ringColor="#E6E6FA"
                        app:ringProgressColor="#FFA500"
                        app:ringWidth="25dp"
                        app:textColor="#000000"
                        app:textIsShow="true"
                        app:textSize="40sp" />

                    <Button
                        android:id="@+id/w7"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/ringprogress3"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:background="#00FF7F"
                        android:onClick="w41"
                        android:text="@string/on"
                        android:textAlignment="center"
                        android:textColor="#FFFF"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/w8"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/ringprogress3"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="15dp"
                        android:background="#FE0000"
                        android:onClick="w40"
                        android:text="@string/off"
                        android:textAlignment="center"
                        android:textColor="#FFFF"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="60dp"
                        android:layout_marginLeft="60dp"
                        android:text="@string/tank4"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/box"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <io.netopen.hotbitmapgg.library.view.RingProgressBar
                    android:id="@+id/ringprogress4"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="40dp"
                    app:max="100"
                    app:ringColor="#E6E6FA"
                    app:ringProgressColor="#FFA500"
                    app:ringWidth="25dp"
                    app:textColor="#000000"
                    app:textIsShow="true"
                    app:textSize="40sp" />
                <Button
                    android:id="@+id/w9"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/ringprogress4"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:onClick="w51"
                    android:text="@string/on"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#FFFF"
                    android:background="#00FF7F"/>
                <Button
                    android:id="@+id/w10"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/ringprogress4"
                    android:layout_marginLeft="115dp"
                    android:layout_marginStart="115dp"
                    android:layout_marginTop="10dp"
                    android:onClick="w50"
                    android:text="@string/off"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:background="#FE0000"
                    android:textColor="#FFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"

                    android:layout_marginTop="10sp"
                    android:text="@string/tank5"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>